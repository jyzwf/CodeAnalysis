    "@babel/preset-react": "7.0.0-beta.46",
    "@babel/preset-stage-0": "7.0.0-beta.46",
    "@babel/runtime": "7.0.0-beta.46",
    "babel-eslint": "^8.0.2",
    "chalk": "^2.3.2",
    "coveralls": "^3.0.0",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
